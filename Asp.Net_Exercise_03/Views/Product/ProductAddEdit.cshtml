@model ProductModel

<div class="text-center">@ViewBag.message</div>
<form asp-controller="Product"
      method="post">
    <div class="form-group row">
        <label asp-for="Product_name" class="my-2 col-form-label text-right col-sm-2">Product Name:</label>
        <div class="col-sm-10">
            <input asp-for="Product_name" name="product_name" class="form-control my-2" />
            <span class="text-danger" asp-validation-for="Product_name"></span>
        </div>
    </div>
    <div class="form-group justify-content-center row">
        @if (ViewData["Title"] == "Add Product")
        {
            <input type="submit" asp-controller="Product" asp-action="ProductAdd" value="Add Product" class="btn btn-success m-3" />
        }
        else
        {
            <input type="submit" asp-controller="Product" asp-action="ProductEdit" value="Update Product" class="btn btn-success m-3" />
        }
        <input type="reset" value="Cancel" class="btn btn-light m-3" />
    </div>
</form>

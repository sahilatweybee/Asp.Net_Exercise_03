@model ProductModel

@if (ViewBag.IsSuccess == 1)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">@ViewBag.message</div>
}
else if (ViewBag.IsSuccess == 2)
{
    <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">@ViewBag.message</div>
}

<form asp-controller="Product"
      method="post">
    <div class="form-group row">
        <label asp-for="Product_name" class="my-2 col-form-label text-right col-sm-2">Product Name:</label>
        <div class="col-sm-10">
            <input asp-for="Product_name" class="form-control my-2" />
            <span class="text-danger" asp-validation-for="Product_name"></span>
        </div>
    </div>
    <div class="form-group justify-content-center row">
        @if (ViewData["Title"].ToString() == "Add Product")
        {
        <button type="submit" asp-controller="Product" asp-action="ProductAdd" class="btn btn-success m-3"><i class="bi bi-plus-circle"></i> Add Product</button>
        }
        else
        {
    <button type="submit" asp-controller="Product" asp-action="ProductEdit" class="btn btn-success m-3"><i class="bi bi-upload"></i> Update Product</button>
        }
        <a asp-controller="Product" asp-action="ProductList" class="btn btn-light m-3" id="cancel-btn" onclick="return confirm('Are you sure You want to Exit?')">Cancel</a>
    </div>
</form>

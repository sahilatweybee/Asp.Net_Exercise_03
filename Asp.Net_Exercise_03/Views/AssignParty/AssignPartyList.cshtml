@model IEnumerable<AssignPartyModel>
@{
    ViewData["Title"] = "AssignPartyList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Assign Party List</h1>
<div class="row w-100 justify-content-end">
    <a asp-controller="AssignParty" asp-action="AssignPartyAdd" role="button" class="btn text-light bg-success">Add New Party</a>
</div>
<table class="mt-3 table table-striped">
    <thead class="bg-primary text-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Party</th>
            <th scope="col">Product</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assign in Model)
        {
            <tr>
                <th scope="row">@assign.assign_id</th>
                <td>@assign.party.party_name</td>
                <td>@assign.product.product_name</td>
                <td class="text-center">
                    <a asp-controller="AssignParty"  class="btn btn-primary">Edit</a>
                    <a href="#" role="button" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
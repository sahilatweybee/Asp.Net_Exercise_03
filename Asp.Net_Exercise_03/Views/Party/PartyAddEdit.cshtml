@model PartyModel

@if (ViewBag.IsSuccess == 1)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">@ViewBag.message</div>
}
else if(ViewBag.IsSuccess == 2)
{
    <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">@ViewBag.message</div>
}


<form asp-controller="Party"
      asp-action="PartyAdd"
      method="post">
    <div class="form-group row">
        <label asp-for="Party_name" class="my-2 col-form-label text-right col-sm-2">Party Name:</label>
        <div class="col-sm-10">
            <input asp-for="Party_name" name="party_name" class="form-control my-2" />
            <span class="text-danger" asp-validation-for="Party_name"></span>
        </div>
    </div>
    <div class="form-group justify-content-center row">
        @if (ViewData["Title"].ToString() == "Add Party")
        {
            <input type="submit" asp-controller="Party" asp-action="PartyAdd" value="Add Party" class="btn btn-success m-3" />
        }
        else
        {
            <input type="submit" asp-controller="Party" asp-action="PartyEdit" value="Update Party" class="btn btn-success m-3" />
        }
        <input type="reset" value="Cancel" class="btn btn-light m-3" />
    </div>
</form>


@{
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    string ActivePg(string str)
    {
        var isTrue = str.Equals(controller);
        if (isTrue)
        {
            return "nav-item active";
        }
        else
        {
            return "nav-item";
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"].ToString() - Asp.Net_Exercise_03</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid w-75">
                <div class="navbar navbar-expand-sm" id="navbarNavAltMarkup">
                    <a class="navbar-brand" asp-controller="Party" asp-action="PartyList">Invoice Module</a>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="@ActivePg("Party")"><a class="nav-link" asp-controller="Party" asp-action="PartyList">Party</a></li>
                        <li class="@ActivePg("Product")"><a class="nav-link" asp-controller="Product" asp-action="ProductList">Product</a></li>
                        <li class="@ActivePg("AssignParty")"><a class="nav-link" asp-controller="AssignParty" asp-action="AssignPartyList">Assign Party</a></li>
                        <li class="@ActivePg("ProductRate")"><a class="nav-link" asp-controller="ProductRate" asp-action="ProductRateList">Product Rate</a></li>
                        <li class="@ActivePg("Invoice")"><a class="nav-link" asp-controller="Invoice" asp-action="Index">Invoice</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 w-75 m-auto">
            <h1 class="text-center">@ViewData["Title"].ToString()</h1>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Asp.Net_Exercise_03 - <a href="#">Privacy</a>
        </div>
    </footer>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

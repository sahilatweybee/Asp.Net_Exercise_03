<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"].ToString() - Asp.Net_Exercise_03</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/css/site.min.css" rel="stylesheet" />
</head>
<body>
    <partial name="_HeaderPartial.cshtml" />
    <div class="container">
        <main role="main" class="pb-3 w-75 m-auto">
            <h1 class="text-center">@ViewData["Title"].ToString()</h1>
            @if (ViewBag.IsSuccess == 1)
            {
                <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                    @ViewBag.message
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        @*<span aria-hidden="true">&times;</span>*@ 
                        <i class="bi bi-x-lg" aria-hidden="true"></i>
                    </button>
                </div>
            }
            else if (ViewBag.IsSuccess == 2)
            {
                <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">  
                    @ViewBag.message
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        @*<span aria-hidden="true">&times;</span>*@
                        <i class="bi bi-x-lg font-weight-bold" aria-hidden="true"></i>
                    </button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Asp.Net_Exercise_03 - <a href="#">Privacy</a>
        </div>
    </footer>
    <partial name="_ScriptsPartial.cshtml" />
    @RenderSection("Scripts", required: false)
</body>
</html>

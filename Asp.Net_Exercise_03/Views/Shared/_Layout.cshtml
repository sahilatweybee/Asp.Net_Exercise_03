<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Asp.Net_Exercise_03</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid w-75">
                <div class="navbar navbar-expand-sm" id="navbarNavAltMarkup">
                    <a class="navbar-brand" href="#">Invoice Module</a>
                    <div class="navbar-nav">
                        <a class="nav-link active" asp-controller="Party" asp-action="PartyList">Party</a>
                        <a class="nav-link" asp-controller="Product" asp-action="ProductList">Product</a>
                        <a class="nav-link" asp-controller="AssignParty" asp-action="AssignPartyList">Assign Party</a>
                        <a class="nav-link" asp-controller="ProductRate" asp-action="ProductRateList">Product Rate</a>
                        <a class="nav-link" asp-controller="Invoice" asp-action="Index">Invoice</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 w-75 m-auto">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Asp.Net_Exercise_03 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

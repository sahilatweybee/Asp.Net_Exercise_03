@{
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    string ActivePg(string str)
    {
        var isActive = str.Equals(controller);
        if (isActive)
        {
            return "nav-link active";
        }
        else
        {
            return "nav-link";
        }
    }
}

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid w-75">
            <div class="navbar navbar-expand-sm" id="navbarNavAltMarkup">
                <a class="navbar-brand" asp-controller="Party" asp-action="PartyList">Invoice Module</a>
                <div class="navbar-nav flex-grow-1">
                    <a class="@ActivePg("Party")" asp-controller="Party" asp-action="PartyList">Party</a>
                    <a class="@ActivePg("Product")" asp-controller="Product" asp-action="ProductList">Product</a>
                    <a class="@ActivePg("AssignParty")" asp-controller="AssignParty" asp-action="AssignPartyList">Assign Party</a>
                    <a class="@ActivePg("ProductRate")" asp-controller="ProductRate" asp-action="ProductRateList">Product Rate</a>
                    <a class="@ActivePg("Invoice")" asp-controller="Invoice" asp-action="Index">Invoice</a>
                </div>
            </div>
        </div>
    </nav>
</header>